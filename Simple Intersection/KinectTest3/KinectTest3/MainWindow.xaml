        <my:KinectSensorChooser HorizontalAlignment="Left" Margin="90,65,0,0" Name="kinectSensorChooser1" VerticalAlignment="Top" Width="328" />
        <Image Height="480" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="640" Margin="-8,-26,0,0" />
        <my:KinectColorViewer HorizontalAlignment="Left" Margin="-338,59,0,0" Name="kinectColorViewer1" VerticalAlignment="Top" Height="240" Width="320" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" />
    </Grid>
